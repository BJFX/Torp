        <TextBlock FontSize="16" FontWeight="Bold" Foreground="MediumBlue" Margin="66,34.986,3.57,0" Name="Range" Height="24.276" VerticalAlignment="Top" Text="44"/>
        <Label FontSize="16" Foreground="Navy" Height="32.712" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Margin="-1,104.288,0,0" Name="MemoLabel" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="68">备注:</Label>
        <TextBlock FontSize="16" FontWeight="Bold" Foreground="Maroon" Margin="66,109.724,2.708,0" Name="Memo" Height="24.276" VerticalAlignment="Top" Text="-" TextWrapping="Wrap"/>
        <Label FontSize="16" Foreground="Navy" Height="36" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Margin="0,49.617,0,0" Name="LatLabel" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="68">纬度:</Label>
        <TextBlock FontSize="16" FontWeight="Bold" Foreground="DarkBlue" Height="26.355" Margin="66,56.977,6.655,0" Name="Lat" VerticalAlignment="Top" Text="-"></TextBlock>
        <Label FontSize="16" Foreground="Navy" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Margin="0,78,0,0" Name="LongLabel" VerticalContentAlignment="Center" Width="68" Height="32.712" VerticalAlignment="Top">经度:</Label>
        <TextBlock FontSize="16" FontWeight="Bold" Foreground="DarkBlue" Margin="66,85,46.655,0" Name="Long" Text="-" Height="25.712" VerticalAlignment="Top" />
        <TextBlock FontSize="14" FontWeight="Normal" Foreground="Black" Height="21" Name="TimeGps" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="63" Text="15:55:55" TextAlignment="Left" Margin="0,0,0,5"/>
    </Grid>
</UserControl>
