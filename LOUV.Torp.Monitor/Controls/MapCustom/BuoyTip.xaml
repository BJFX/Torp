             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Background="Transparent" Height="160" Width="180" IsHitTestVisible="False">
    <Grid>
        <Rectangle Stroke="Green" RadiusX="2" RadiusY="2" Fill="AliceBlue"/>
        <Label Name="BuoyNameLabel" HorizontalAlignment="Left" Width="68" FontSize="16" Foreground="Navy" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Height="40" VerticalAlignment="Top">浮标:</Label>
        <TextBlock Height="23.64" Margin="66,9.36,5.137,0" Name="BuoyID" VerticalAlignment="Top" Foreground="Red" FontSize="16" FontWeight="Bold" Text="4444"/>
