                <TextBlock Text="{Binding Home_Brand_LOAT, Mode=OneWay, Source={StaticResource Resources}}" FontSize="24" Foreground="White" HorizontalAlignment="Right"/>
                <Rectangle Height="3" Fill="WhiteSmoke" HorizontalAlignment="Right" Width="360"/>
                <TextBlock Text="{Binding Home_Brand_LOAT_E, Mode=OneWay, Source={StaticResource Resources}}" HorizontalAlignment="Right" FontSize="14" Foreground="White"/>
            </StackPanel>
            <Controls:AnimationSlide  Grid.RowSpan="3" Grid.ColumnSpan="4"
            Panel.ZIndex="90"
                                     x:Name="AboutPanel" 
                                     IsAutoClose="False"   
                                     Width="350" 
                                     VerticalAlignment="Stretch"
                                     Visibility= "Visible"
                                     HorizontalAlignment="Right" IsOpen="{Binding AboutVisibility, Mode=TwoWay}">
                <Grid Background="#696969" TextBlock.FontSize="{StaticResource Small}">
                    <Grid.Resources>
                        <Style x:Key="HyperlinkStyle" TargetType="Hyperlink">
                            <Setter Property="Foreground" Value="Orange"/>
