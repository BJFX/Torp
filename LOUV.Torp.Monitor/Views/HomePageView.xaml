                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="多普勒:" Foreground="Lavender" FontSize="16" VerticalAlignment="Center"/>
                                <Label Content="{Binding Buoy1.teleRange.Dopple}" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="(类型):" Foreground="Lavender" FontSize="16" VerticalAlignment="Center"/>
