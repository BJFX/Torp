                            <Label Content="{Binding ObjTarget.Name}" FontSize="22" Foreground="White" HorizontalAlignment="Left"/>
                            <Label Content="{Binding ObjTarget.Status}" FontSize="20" Foreground="White" HorizontalAlignment="Left"/>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="更新:" Foreground="White" FontSize="18" VerticalAlignment="Center"/>
                                <Label Content="{Binding ObjTarget.Time}" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="经度:" Foreground="White" FontSize="18" VerticalAlignment="Center"/>
                                <Label Content="{Binding ObjTarget.Longitude, StringFormat=\{0:F6\}}" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="纬度:" Foreground="White" FontSize="18" VerticalAlignment="Center"/>
                                <Label Content="{Binding ObjTarget.Latitude, StringFormat=\{0:F6\}}" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="深度(m):" Foreground="White" FontSize="18" VerticalAlignment="Center"/>
                                <Label Content="{Binding ObjTarget.Depth, StringFormat=\{0:F6\}}" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>

                        </UniformGrid>
                        <UniformGrid Rows="5" Columns="3" Grid.Row="1" >
                            <Label Content="{Binding Buoy1.Name}" FontSize="18" Foreground="Lavender" HorizontalAlignment="Left"/>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="更新:" Foreground="Lavender" FontSize="16" VerticalAlignment="Center"/>
                                <Label Content="{Binding Buoy1.Time}" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="测距:" Foreground="Lavender" FontSize="16" VerticalAlignment="Center"/>
                                <Label Content="{Binding Buoy1.Range, StringFormat=\{0:F6\}}" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="经度:" Foreground="Lavender" FontSize="16" VerticalAlignment="Center"/>
                                <Label Content="{Binding Buoy1.gps.Longitude, StringFormat=\{0:F6\}}" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="纬度:" Foreground="Lavender" FontSize="16" VerticalAlignment="Center"/>
                                <Label Content="{Binding Buoy1.gps.Latitude, StringFormat=\{0:F6\}}" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="CRC:" Foreground="Lavender" FontSize="16" VerticalAlignment="Center"/>
                                <Label Content="{Binding Buoy1.teleRange.Crc}" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="相关系数:" Foreground="Lavender" FontSize="16" VerticalAlignment="Center"/>
                                <Label Content="{Binding Buoy1.liteRange.RelativePara1, StringFormat=\{0:F3\}}" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="增益:" Foreground="Lavender" FontSize="16" VerticalAlignment="Center"/>
                                <Label Content="{Binding Buoy1.liteRange.RecvGain}" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="相关峰:" Foreground="Lavender" FontSize="16" VerticalAlignment="Center"/>
                                <Label Content="{Binding Buoy1.liteRange.PeakPosition}" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="延时:" Foreground="Lavender" FontSize="16" VerticalAlignment="Center"/>
